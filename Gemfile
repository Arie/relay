source :rubygems

#Base for the app
gem 'sinatra', :require => 'sinatra/base'
#Templating engine for the views
gem 'haml'
#CSS preprocessor
gem 'sass'
#Provides flash messages
gem 'rack-flash3'
#Escapes input for commands that get passed to shell
gem 'escape'
#Simple caching
gem 'memoizable'
gem 'rack-cache'
#Slightly more complicated caching
gem 'dalli'
#Ruby webserver
gem 'thin'

group :development do
  #Debugging
  gem 'pry-nav'
  #Deployment
  gem 'capistrano-ext'
  gem 'capistrano_colors'
  gem 'capistrano'
  gem 'rvm-capistrano'
end
